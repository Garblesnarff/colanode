# AI Chat Configuration Example
# Add these environment variables to enable AI chat features

# Enable AI features
AI_ENABLED=true

# OpenAI Provider (existing)
OPENAI_ENABLED=true
OPENAI_API_KEY=your_openai_api_key_here

# Google Provider (existing)
GOOGLE_ENABLED=true
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter Provider (new)
OPENROUTER_ENABLED=true
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Configuration
# Default models for different tasks
RESPONSE_PROVIDER=openai
RESPONSE_MODEL=gpt-4o-mini
RESPONSE_TEMPERATURE=0.7

# You can also use OpenRouter models
# RESPONSE_PROVIDER=openrouter
# RESPONSE_MODEL=anthropic/claude-3.5-sonnet
# RESPONSE_TEMPERATURE=0.7

# Or Google models
# RESPONSE_PROVIDER=google
# RESPONSE_MODEL=gemini-1.5-pro
# RESPONSE_TEMPERATURE=0.7

# Query rewriting (for better context retrieval)
QUERY_REWRITE_PROVIDER=openai
QUERY_REWRITE_MODEL=gpt-4o-mini
QUERY_REWRITE_TEMPERATURE=0.3

# Document ranking and other tasks
RERANK_PROVIDER=openai
RERANK_MODEL=gpt-4o-mini
RERANK_TEMPERATURE=0.1

SUMMARIZATION_PROVIDER=openai
SUMMARIZATION_MODEL=gpt-4o-mini
SUMMARIZATION_TEMPERATURE=0.3

CONTEXT_ENHANCER_PROVIDER=openai
CONTEXT_ENHANCER_MODEL=gpt-4o-mini
CONTEXT_ENHANCER_TEMPERATURE=0.3

NO_CONTEXT_PROVIDER=openai
NO_CONTEXT_MODEL=gpt-4o-mini
NO_CONTEXT_TEMPERATURE=0.7

INTENT_RECOGNITION_PROVIDER=openai
INTENT_RECOGNITION_MODEL=gpt-4o-mini
INTENT_RECOGNITION_TEMPERATURE=0.1

DATABASE_FILTER_PROVIDER=openai
DATABASE_FILTER_MODEL=gpt-4o-mini
DATABASE_FILTER_TEMPERATURE=0.1

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=2000
EMBEDDING_API_KEY=your_openai_api_key_here
EMBEDDING_BATCH_SIZE=50

# Retrieval Configuration
RETRIEVAL_HYBRID_SEARCH_SEMANTIC_WEIGHT=0.7
RETRIEVAL_HYBRID_SEARCH_KEYWORD_WEIGHT=0.3
RETRIEVAL_HYBRID_SEARCH_MAX_RESULTS=10

# Chunking Configuration
CHUNK_DEFAULT_CHUNK_SIZE=1000
CHUNK_DEFAULT_OVERLAP=200
CHUNK_ENHANCE_WITH_CONTEXT=true

# AI Processing Delays (milliseconds)
AI_NODE_EMBEDDING_DELAY=5000
AI_DOCUMENT_EMBEDDING_DELAY=10000

# Optional: Langfuse (AI observability)
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com